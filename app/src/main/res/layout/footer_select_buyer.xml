<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/view2"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/news_divider_color"/>


    <RelativeLayout
        android:layout_margin="@dimen/fifteen_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginLeft="@dimen/eight_dp"
            android:layout_toLeftOf="@+id/rL_select"
            android:layout_toStartOf="@+id/rL_select"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.lagel.com.custom_fonts.TextViewRobotoMedium
                android:id="@+id/tV_heading"
                android:textSize="16sp"
                android:textColor="@color/item_name_color"
                android:text="@string/sold_it_somewhere_else"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <com.lagel.com.custom_fonts.TextViewRobotoRegular
                android:id="@+id/tV_subHeading"
                android:layout_marginTop="2dp"
                android:layout_below="@id/tV_heading"
                android:textSize="14sp"
                android:textColor="@color/sub_heading_color"
                android:text="@string/i_didnt_sell_it_on_offerup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

        <!-- Select -->
        <RelativeLayout
            android:id="@+id/rL_select"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/ninety_dp"
            android:layout_height="@dimen/thirty_five_dp"
            android:background="@drawable/rect_purple_color_with_stroke_shape">
            <com.lagel.com.custom_fonts.TextViewRobotoMedium
                android:id="@+id/tV_follow"
                android:layout_centerInParent="true"
                android:textSize="@dimen/medium_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_color"
                android:text="@string/select"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color"/>
</LinearLayout>