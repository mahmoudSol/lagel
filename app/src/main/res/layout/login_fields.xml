<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/twelve_dp">

    <RelativeLayout
        android:id="@+id/rV_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iV_back_icon"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/back_arrow_icon2"
            android:tint="@color/colorPrimary" android:contentDescription="TODO" />

        <com.lagel.com.custom_fonts.TextViewRobotoMedium
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/twenty_dp"
            android:text="@string/not_a_memmber_yet" />

        <ImageView
            android:id="@+id/iV_logo"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:src="@drawable/app_logo_icon"
            android:tint="@color/colorPrimary"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rV_top"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_center"
                android:layout_marginTop="15dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <com.lagel.com.custom_fonts.TextViewRobotoMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/login"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <com.lagel.com.custom_fonts.TextViewRobotoRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twelve_dp"
                        android:gravity="center"
                        android:padding="@dimen/twelve_dp"
                        android:text="@string/start_making_cash_by_selling_your_stuff_or_find_bargains_for_sale_near_you"

                        />

                    <!--RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"-->

                    <LinearLayout
                        android:id="@+id/ll_opcion"
                        android:layout_marginTop="1dip"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="@dimen/fifteen_dp3"
                        android:layout_marginStart="@dimen/fifteen_dp3"
                        android:layout_marginRight="@dimen/fifteen_dp3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_weight="1"
                            android:id="@+id/rL1_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.lagel.com.custom_fonts.TextViewRobotoMedium
                                android:id="@+id/v_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/phone_label"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/v_1_phone"
                                android:layout_below="@+id/v_phone"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/color_black" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rL1_email"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.lagel.com.custom_fonts.TextViewRobotoMedium
                                android:layout_width="match_parent"
                                android:id="@+id/v_email"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/email_label"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/v_1_email"
                                android:layout_below="@+id/v_email"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="1dip"
                                android:layout_height="2dp"
                                android:background="@color/color_text_gray" />

                        </RelativeLayout>
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_below="@+id/ll_opcion"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/fifteen_dp3"
                        android:layout_height="?attr/actionBarSize">


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dip"
                            android:alpha="0.65"
                            android:background="@drawable/rect_login_box_color_with_solid_shape" />

                        <com.lagel.com.custom_fonts.TextViewRobotoMedium
                            android:id="@+id/v_cod_country"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@drawable/custom_button_white"
                            android:gravity="center"
                            android:paddingLeft="10dip"
                            android:paddingRight="10dip"
                            android:text="HT +509"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                        <com.lagel.com.custom_fonts.EditTextRobotoMedium
                            android:id="@+id/eT_loginUserName"
                            android:layout_toRightOf="@+id/v_cod_country"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="0dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginRight="0dip"
                            android:background="@drawable/custom_button_white"
                            android:paddingLeft="10dip"
                            android:hint="@string/phone_label"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/landing_page_black"
                            android:textColorHint="@color/hint_color"
                            android:textCursorDrawable="@drawable/black_login_signup_cursor_drawable"
                            android:textSize="@dimen/fifteen_sp" />

                        <ImageView
                            android:id="@+id/iV_login_userName_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/ten_dp"
                            android:layout_marginStart="@dimen/ten_dp"
                            android:contentDescription="@string/simple_image_view"
                            android:src="@drawable/error_icon"
                            android:visibility="gone" />


                    </RelativeLayout>

                    <!--View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/hint_color" /-->

                    <RelativeLayout
                        android:layout_marginLeft="@dimen/fifteen_dp3"
                        android:layout_marginStart="@dimen/fifteen_dp3"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.65"
                            android:background="@drawable/rect_login_box_color_with_solid_shape" />

                        <!--android:background="@null"-->
                        <com.lagel.com.custom_fonts.EditTextRobotoMedium
                            android:id="@+id/eT_loginPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="1dip"
                            android:layout_marginRight="0dip"
                            android:background="@drawable/custom_button_white"
                            android:paddingLeft="10dip"
                            android:hint="@string/password"
                            android:text=""
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textColor="@color/landing_page_black"
                            android:textColorHint="@color/hint_color"
                            android:textCursorDrawable="@drawable/black_login_signup_cursor_drawable"
                            android:textSize="@dimen/fifteen_sp" />

                        <ImageView
                            android:id="@+id/iV_login_password_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/ten_dp"
                            android:layout_marginStart="@dimen/ten_dp"
                            android:contentDescription="@string/simple_image_view"
                            
                            android:src="@drawable/error_icon"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <!--View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/hint_color" /-->
                    <!-- Forgot your login details -->

                    <!-- Login Button -->
                    <RelativeLayout
                        android:id="@+id/rL_do_login"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginEnd="@dimen/fifteen_dp_2"
                        android:layout_marginLeft="@dimen/fifteen_dp_2"
                        android:layout_marginRight="@dimen/fifteen_dp_2"
                        android:layout_marginStart="15dip"
                        android:layout_marginTop="15dip"
                        android:background="@drawable/rect_purple_color_with_solid_shape">

                        <com.lagel.com.custom_fonts.TextViewRobotoMedium
                            android:id="@+id/tV_do_login"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:textSize="@dimen/nineteen_sp" />

                        <ProgressBar
                            android:id="@+id/progress_bar_login"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:indeterminateDrawable="@drawable/white_color_progress_bar_bg"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rL_forgot_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/ten_dp">

                        <com.lagel.com.custom_fonts.TextViewRobotoRegular
                            android:id="@+id/forgot_your_login"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="@string/forgot_your_login"
                            android:textColor="@color/landing_page_gray"
                            android:textSize="@dimen/small_text_size" />

                        <com.lagel.com.custom_fonts.TextViewRobotoMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:layout_marginStart="@dimen/five_dp"
                            android:layout_toEndOf="@+id/forgot_your_login"
                            android:layout_toRightOf="@+id/forgot_your_login"
                            android:text="@string/get_help_signing_in"
                            android:textColor="@color/landing_page_black"
                            android:textSize="@dimen/small_text_size" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <!--- -->

        <RelativeLayout
            android:id="@+id/rv_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="3dp">


            <RelativeLayout
                android:id="@+id/rv_or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <View
                    android:id="@+id/line_l"
                    android:layout_width="50dip"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dip"
                    android:layout_toLeftOf="@+id/tv_or"
                    android:background="@color/hint_color" />

                <com.lagel.com.custom_fonts.TextViewRobotoMedium
                    android:id="@+id/tv_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/or"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/line_r"
                    android:layout_width="50dip"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dip"
                    android:layout_toRightOf="@+id/tv_or"
                    android:background="@color/hint_color" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_log"
                android:layout_below="@+id/rv_or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rL_fb_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_rounded_fb_color_with_solid_shape">

                <ImageView
                    android:id="@+id/iV_fbicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:contentDescription="@string/simple_image_view"
                    android:padding="3dp"
                    android:src="@drawable/fb_rounded_bg" />

                <com.lagel.com.custom_fonts.TextViewRobotoMedium
                    android:id="@+id/tV_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/iV_fbicon"
                    android:text="@string/sign_in"
                    android:textColor="@color/white"
                    android:textSize="@dimen/heading_text_size" />

                <ProgressBar
                    android:id="@+id/pBar_fbLogin"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:indeterminateDrawable="@drawable/white_color_progress_bar_bg"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rL_google_login"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_rounded_google_bg_with_solid_shape">

                <ImageView
                    android:id="@+id/iV_google_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:contentDescription="@string/simple_image_view"
                    android:padding="3dp"
                    android:src="@drawable/google_rounded_bg" />

                <com.lagel.com.custom_fonts.TextViewRobotoMedium
                    android:id="@+id/tV_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/iV_google_icon"
                    android:text="@string/sign_in"
                    android:textColor="@color/white"
                    android:textSize="@dimen/heading_text_size" />

                <ProgressBar
                    android:id="@+id/pBar_googleLogin"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:indeterminateDrawable="@drawable/white_color_progress_bar_bg"
                    android:visibility="gone" />

            </RelativeLayout>

            </LinearLayout>


            <View
                android:id="@+id/line_1"
                android:layout_below="@+id/ll_log"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dip"
                android:background="@color/hint_color" />

            <com.lagel.com.custom_fonts.TextViewRobotoMedium
                android:id="@+id/tV_signup_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_1"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dip"
                android:background="@drawable/border_shape"
                android:gravity="center_horizontal"
                android:paddingBottom="8dip"
                android:paddingTop="8dip"
                android:text="@string/sign_up"
                android:textColor="@color/status_bar_color"

                />

            </RelativeLayout>

            <!--- -->



        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
