<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relative_layout_message"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/offer_received_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white50"
            android:foreground="?android:attr/selectableItemBackground">
            <RelativeLayout
                android:id="@+id/top_view"
                android:background="@drawable/counterofferreceived_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sent_offer_view"
                    android:layout_alignParentTop="true"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:text="@string/counter_offer_received"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="8dp"
                    android:layout_below="@+id/sent_offer_view"
                    android:textSize="21sp"
                    android:id="@+id/offerPrice"
                    android:text="@string/temp_text"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:background="?android:selectableItemBackground"
                android:layout_below="@id/top_view"
                android:id="@+id/acceptOffer"
                android:textSize="17sp"
                android:padding="8dp"
                android:text="@string/accept_text"
                android:maxLines="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/divider"
                android:layout_below="@+id/acceptOffer"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/ashcolor"/>
            <TextView
                android:padding="9dp"
                android:gravity="center"
                android:layout_below="@+id/divider"
                android:id="@+id/counterOffer"
                android:textSize="17sp"
                android:text="@string/counter_offer"
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>




