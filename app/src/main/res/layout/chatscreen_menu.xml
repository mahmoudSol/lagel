<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_media"
        android:layout_width="160dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/color_white"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/history"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="16dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_restore_black_svg_24px"

            />


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/history"
            android:layout_toRightOf="@+id/history"

            android:text="@string/MediaHistoryNotCapital"
            android:textColor="@color/color_text_black"

            android:textSize="14sp" />

    </RelativeLayout>


    <View
        android:id="@+id/v"
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_media"
        android:background="@color/color_line_gray" />

    <RelativeLayout
        android:id="@+id/rl_delete"
        android:layout_width="160dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"

        android:layout_below="@+id/v"
        android:background="@color/color_white"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="16dp"

            android:visibility="visible"
            app:srcCompat="@drawable/ic_delete_forever_black_24px" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/delete"
            android:layout_toRightOf="@+id/delete"
            android:text="@string/DeleteChatCamelCase"
            android:textColor="@color/color_text_black"

            android:textSize="14sp" />










    </RelativeLayout>


    <View
        android:id="@+id/v2"
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_delete"
        android:background="@color/color_line_gray" />
    <RelativeLayout
        android:id="@+id/rl_last"
        android:layout_width="160dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"

        android:layout_below="@+id/v2"
        android:background="@color/color_white"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/button_done"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="16dp"

            android:visibility="visible"
            app:srcCompat="@drawable/cancel_normal" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/button_done"
            android:layout_toRightOf="@+id/button_done"
            android:text="@string/EnableLast"
            android:textColor="@color/color_text_black"

            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>