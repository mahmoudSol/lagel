<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_white_color_with_solid_shape">

    <ImageView
        android:id="@+id/iV_userPic"
        android:layout_marginTop="@dimen/twenty_five_dp"
        android:layout_width="@dimen/hundred_dp"
        android:layout_height="@dimen/hundred_dp"
        android:src="@drawable/default_profile_image"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/simple_image_view"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/twenty_five_dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.lagel.com.custom_fonts.TextViewRobotoRegular
            android:id="@+id/text_unfollow"
            android:textSize="@dimen/heading_text_size"
            android:textColor="@color/heading_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unfollow"/>

        <com.lagel.com.custom_fonts.TextViewRobotoBold
            android:id="@+id/tV_userName"
            android:textSize="@dimen/heading_text_size"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_toRightOf="@+id/text_unfollow"
            android:layout_toEndOf="@+id/text_unfollow"
            android:textColor="@color/item_name_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_marginTop="@dimen/thirty_dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/news_divider_color"/>
    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <com.lagel.com.custom_fonts.TextViewRobotoBold
            android:id="@+id/tV_cancel"
            android:textStyle="bold"
            android:textColor="@color/item_name_color"
            android:gravity="center"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_list_view"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/fourty_dp"
            android:background="@color/news_divider_color"/>

        <com.lagel.com.custom_fonts.TextViewRobotoBold
            android:id="@+id/tV_unfollow"
            android:textStyle="bold"
            android:textColor="@color/item_name_color"
            android:gravity="center"
            android:text="@string/unfollow"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_list_view"
            />

    </LinearLayout>
</LinearLayout>