<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rL_datum_plus_passport_logo"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/get_datum_plus_passport_logo">
        <TextView
            android:id="@+id/center_image_txt"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="@string/passport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/center_image"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/get_datum_plus_passport_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/first_header_txt"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/changeYourLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/second_header_text"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:text="@string/matchAroundWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>